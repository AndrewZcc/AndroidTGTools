		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	>
		<TextView
			android:id="@android:id/text1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		/>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/mapping_container"
			android:orientation="vertical"
		/>
	</LinearLayout>
</ScrollView>