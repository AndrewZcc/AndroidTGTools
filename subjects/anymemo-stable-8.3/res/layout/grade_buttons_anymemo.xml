<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grade_buttons_anymemo"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/grade_btn_anymemo_0" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:layout_marginLeft="4dip" />
        <Button 
            android:id="@+id/grade_btn_anymemo_1" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:layout_marginLeft="4dip" />
        <Button 
            android:id="@+id/grade_btn_anymemo_2" 
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/grade_btn_anymemo_3" 
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="4dip" />
        <Button 
            android:id="@+id/grade_btn_anymemo_4" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:layout_marginLeft="4dip" />
        <Button 
            android:id="@+id/grade_btn_anymemo_5" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:layout_marginLeft="4dip" 
            android:layout_marginRight="4dip" />
    </LinearLayout>
</LinearLayout>
