<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"> 
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/source_anymemo"
            style="@style/list_button"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/server" />
            <TextView
                android:layout_width="fill_parent" 
                android:layout_weight="1"
                android:layout_height="wrap_content" 
                android:text="@string/download_source_anymemo"
                android:textSize="24dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/source_fe"
            style="@style/list_button"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/server" />
            <TextView
                android:layout_width="fill_parent" 
                android:layout_weight="1"
                android:layout_height="wrap_content" 
                android:text="@string/download_source_fe"
                android:textSize="24dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/source_ss"
            style="@style/list_button"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/server" />
            <TextView
                android:layout_width="fill_parent" 
                android:layout_weight="1"
                android:layout_height="wrap_content" 
                android:text="@string/download_source_ss"
                android:textSize="24dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/source_quizlet"
            style="@style/list_button"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/server" />
            <TextView
                android:layout_width="fill_parent" 
                android:layout_weight="1"
                android:layout_height="wrap_content" 
                android:text="@string/download_source_quizlet"
                android:textSize="24dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/source_dropbox"
            style="@style/list_button"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/server" />
            <TextView
                android:layout_width="fill_parent" 
                android:layout_weight="1"
                android:layout_height="wrap_content" 
                android:text="@string/download_source_dropbox"
                android:textSize="24dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
